			"url": "http://www.anurin.name"
		},
		{
			"name": "Serhii Zghama",
			"email": "serhii.zghama@zxteam.org"
		}
	],
	"license": "MIT",
	"devDependencies": {
		"@types/lodash": "^4.14.189",
		"@types/node": "^18.11.9",
		"@types/uuid": "^8.3.4",
		"dotenv": "^16.0.3",
		"source-map-support": "^0.5.21",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"@freemework/common": "^0.6.2",
		"@freemework/hosting": "^0.6.3",
		"@freemework/sql.postgres": "^0.6.1",
		"lodash": "^4.17.21",
		"typescript-ioc": "^1.2.6",
		"uuid": "^9.0.0"
	},
	"engines": {
		"node": ">=12.0.0 <19"
	},
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "git@github.com:edgebus/edgebus.git"
	},
	"bugs": {
		"url": "https://github.com/edgebus/edgebus/issues"
	},
	"homepage": "https://github.com/edgebus/edgebus",
	"scripts": {
		"clean": "find src \\( -name '*.js' -o -name '*.d.ts' -o -name '*.map' \\) -exec rm {} \\; ; find test \\( -name '*.js' -o -name '*.d.ts' -o -name '*.map' \\) -exec rm {} \\;",
		"build": "tsc",
		"start": "node --require=dotenv/config bin/app.js --config-file=edgebus.config --config-env",
		"test": "true",
		"test:next": "nyc --exclude submodules --exclude test --extension=\".ts\" --reporter=lcov --reporter=text --reporter=text-summary mocha \"test/**/*.test.js\" --recursive mocha --timeout 10000",
		"test:local": "env TEST_DB_URL=\"postgres://\" mocha --require source-map-support/register --recursive \"test/**/*.test.js\"",
		"migrate-database:local": "env persistentStorageMigration.url=\"postgres://postgres:@127.0.0.1:5432/emptytestdb?schema=notifier\" node bin/migrate-database.js"
	},
	"private": true
}
