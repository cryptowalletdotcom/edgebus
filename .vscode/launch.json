{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Service",
			"type": "node",
			"request": "launch",
			"preLaunchTask": "build",
			"runtimeArgs": [
				"--nolazy",
				"--require",
				"source-map-support/register",
			],
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development",
				"LOG4JS_CONFIG": "${workspaceFolder}/log4js.json",
				"LOG_LEVEL": "trace"
			},
			"envFile": "${workspaceFolder}/.env",
			"args": [
				"--config-toml-file=${workspaceRoot}/edgebus.toml",
				"--config-env"
			],
			"program": "${workspaceRoot}/bin/edgebus-devel.js",
			"skipFiles": [
				"<node_internals>/**"
			],
		}
	]
}
