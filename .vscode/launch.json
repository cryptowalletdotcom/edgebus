{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Service",
			"type": "node",
			"request": "launch",
			"preLaunchTask": "compile:src:ts",
			"runtimeArgs": [
				"--nolazy",
				"--require",
				"source-map-support/register",
			],
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development",
				"LOG4JS_CONFIG": "${workspaceFolder}/log4js.json",
				"LOG_LEVEL": "trace"
			},
			"envFile": "${workspaceFolder}/.env",
			"args": [
				"--config=${workspaceRoot}/notifier-service.config"
			],
			"program": "${workspaceRoot}/src/app.js"
		},
		{
			"name": "Database Migration",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development",
				"LOG4JS_CONFIG": "${workspaceFolder}/log4js.json",
				"LOG_LEVEL": "trace"
			},
			"envFile": "${workspaceFolder}/.env",
			"args": [
				"--config=${workspaceRoot}/notifier-service.config"
			],
			"program": "${workspaceRoot}/bin/migrate-database.js"
		},
		{
			"name": "Test",
			"type": "node",
			"request": "launch",
			"preLaunchTask": "compile:test:ts",
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy",
				"--require",
				"source-map-support/register",
			],
			"stopOnEntry": false,
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"args": [
				"--no-timeouts",
				"--colors",
				"--debug-brk",
				"test/**/*.js"
			],
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development"
			},
			"console": "internalConsole",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/src/**/*.js",
				"${workspaceRoot}/test/**/*.js"
			]
		}
	]
}
