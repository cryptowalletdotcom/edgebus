{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Service",
			"type": "node",
			"request": "launch",
			"preLaunchTask": "build",
			"runtimeArgs": [
				"--nolazy",
				"--require",
				"source-map-support/register",
			],
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development",
				"LOG4JS_CONFIG": "${workspaceFolder}/log4js.json",
				"LOG_LEVEL": "trace"
			},
			"envFile": "${workspaceFolder}/.env",
			"args": [
				"--config-file=${workspaceRoot}/notifier-service.config",
				"--config-env"
			],
			"program": "${workspaceRoot}/bin/app.js",
			"skipFiles": [
				"<node_internals>/**"
			],
		},
		{
			"name": "Database Migration",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development",
				"LOG4JS_CONFIG": "${workspaceFolder}/log4js.json",
				"LOG_LEVEL": "trace"
			},
			"envFile": "${workspaceFolder}/.env",
			"args": [
				"--config=${workspaceRoot}/notifier-service.config"
			],
			"program": "${workspaceRoot}/bin/migrate-database.js"
		}
	]
}
