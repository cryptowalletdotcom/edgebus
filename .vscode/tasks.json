{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"options": {
		"cwd": "${workspaceRoot}",
		"env": {
			"NODE_ENV": "development",
			"BUILD_TARGET": "local"
		}
	},
	"tasks": [
		{
			"label": "build",
			"group": "build",
			"type": "npm",
			"script": "build",
			"problemMatcher": {
				"base": "$tsc",
				"fileLocation": "relative"
			},
			"detail": "tsc"
		},
		{
			"label": "Build Postgres Database",
			"group": "build",
			"type": "shell",
			"command": "${workspaceFolder}/database/postgres/migration-build.sh",
			"options": {
				"env": {
					"database.name": "devdb",
					"database.user.owner": "edgebus-local-owner",
					"database.user.api": "edgebus-local-api",
					"database.user.readonly": "edgebus-local-readonly"
				}
			},
			"problemMatcher": []
		},
		
		{
			"label": "Database Postgres Install (Full)",
			"group": "none",
			"dependsOn": [
				"Build Postgres Database"
			],
			"type": "shell",
			"command": "${workspaceFolder}/database/postgres/migration-up.sh",
			"problemMatcher": []
		},
		{
			"label": "Database Postgres Rollback (Full)",
			"group": "none",
			"type": "shell",
			"command": "${workspaceFolder}/database/postgres/migration-down.sh",
			"problemMatcher": []
		}
	]
}
